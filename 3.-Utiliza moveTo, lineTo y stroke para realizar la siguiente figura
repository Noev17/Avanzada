    <script>

        
        var canvas = document.getElementById("mycanvas");
        var ctx = canvas.getContext('2d');
       
           ctx.beginPath();
		   ctx.moveTo(200,200);
		   ctx.lineTo(250,350);
		   ctx.lineTo(400,400);
          
           ctx.fillStyle = "blue";
            ctx.fill();

    </script>
    
